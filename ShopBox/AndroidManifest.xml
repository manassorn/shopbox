<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.manassorn.shopbox"
    android:versionCode="2"
    android:versionName="0.9.1" >

    <uses-sdk
        android:minSdkVersion="14"
        android:targetSdkVersion="17" />

    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.CAMERA" />

    <uses-feature android:name="android.hardware.camera" />
    <uses-feature android:name="android.hardware.camera.autofocus" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name="com.manassorn.shopbox.MainActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.manassorn.shopbox.SelectProductActivity"
            android:label="@string/sell_product" >
        </activity>
        <activity
            android:name="com.manassorn.shopbox.DrawerActivity"
            android:label="@string/title_activity_drawer" >
        </activity>
        <activity
            android:name="com.manassorn.shopbox.ScanBarcodeActivity"
            android:label="Scan Barcode" >
        </activity>
        <activity
            android:name="com.manassorn.shopbox.ConfirmBillActivity"
            android:label="@string/title_activity_billing" >
        </activity>
        <activity
            android:name="com.manassorn.shopbox.EnterBarcodeFragment"
            android:label="@string/title_activity_enter_barcode" >
            <intent-filter>
                <action android:name="android.intent.action.SEARCH" />
            </intent-filter>

            <meta-data
                android:name="android.app.searchable"
                android:resource="@xml/searchable" />
        </activity>
        <activity
            android:name="com.manassorn.shopbox.ReceiveMoneyActivity"
            android:label="@string/title_activity_receive_money" >
        </activity>
        <activity
            android:name="com.manassorn.shopbox.GiveChangeActivity"
            android:label="@string/title_activity_give_change" >
        </activity>
        <activity
            android:name="com.manassorn.shopbox.EditOrderActivity"
            android:label="@string/title_activity_finalize_price" >
        </activity>
        <activity
            android:name="com.manassorn.shopbox.ViewBillActivity"
            android:label="@string/title_activity_view_bill" >
        </activity>
        <activity
            android:name="com.manassorn.shopbox.TodayBillActivity"
            android:label="@string/title_activity_today_bill" >
        </activity>
        <activity
            android:name="com.manassorn.shopbox.ReturnOptionMenuActivity"
            android:label="@string/title_activity_return_option_menu" >
        </activity>
        <activity
            android:name="com.manassorn.shopbox.CameraInfoActivity"
            android:label="CameraInfoActivity" >
        </activity>
        <activity
            android:name="com.manassorn.shopbox.SqlQueryActivity"
            android:label="@string/title_activity_sql_query" >
        </activity>
        <activity
            android:name="com.manassorn.shopbox.SelectBillByDateActivity"
            android:label="SelectBillByDateActivity" >
        </activity>
    </application>

</manifest>
