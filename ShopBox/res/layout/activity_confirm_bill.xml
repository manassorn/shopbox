<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/paper"
    tools:context=".ConfirmBillActivity" >
    
    <RelativeLayout 
        android:layout_width="match_parent"
        android:layout_height="?android:attr/actionBarSize"
        android:layout_alignParentBottom="true"
        android:background="#dddddd"
	    android:paddingLeft="@dimen/activity_horizontal_margin" >
        <TextView
            android:id="@+id/total_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginRight="8dp"
            android:text="รวม" />
        <TextView
            android:id="@+id/total"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@id/total_label" />
        <Button
            android:id="@+id/submit_button"
	        style="?android:attr/buttonStyleSmall"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:text="ยืนยัน " />
    </RelativeLayout>
    
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="fill_parent"
	    android:paddingBottom="@dimen/activity_vertical_margin"
	    android:paddingLeft="@dimen/activity_horizontal_margin"
	    android:paddingRight="@dimen/activity_horizontal_margin"
	    android:paddingTop="@dimen/activity_vertical_margin"
        android:orientation="vertical" >

        <com.manassorn.shopbox.PimpdeedTextView
	        android:id="@+id/store_name"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_gravity="center_horizontal"
	        android:textSize="20sp"
	        android:text="ร้าน ABC" />
	    
        <com.manassorn.shopbox.PimpdeedTextView
	        android:id="@+id/tax_id"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_gravity="center_horizontal"
	        android:textSize="18sp"
	        android:text="เลขที่ 01234567890123" />
	    
	    <FrameLayout
	        android:layout_width="match_parent"
	        android:layout_height="wrap_content" >
        	<com.manassorn.shopbox.PimpdeedTextView
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:text="#100001256" />
        	<com.manassorn.shopbox.PimpdeedTextView
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:layout_gravity="right"
	            android:text="09/03/2013 12:12" />
	    </FrameLayout>
	    
		    
	    <ImageView 
	       android:layout_width="match_parent"
	       android:layout_height="1dp"
	       android:src="@drawable/dash_divider"/>
	    
	    <ListView 
	        android:id="@+id/bill_item_list"
	        android:layout_width="match_parent"
	        android:layout_height="wrap_content"
	        android:clickable="false"
	        android:divider="#00000000"
	        android:dividerHeight="0dp" />
        
    </LinearLayout>

</RelativeLayout>
